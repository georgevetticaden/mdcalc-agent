# MDCalc MCP Server Environment Configuration
# Copy this to .env and fill in your Auth0 credentials

# Auth0 Configuration
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_ISSUER=https://your-tenant.auth0.com/
AUTH0_API_AUDIENCE=https://mdcalc-mcp-server

# MCP Server Configuration
# For local development, use localhost
# For production (Cloud Run), update to actual Cloud Run URL after deployment
MCP_SERVER_URL=http://localhost:8080

# Server Port
PORT=8080
